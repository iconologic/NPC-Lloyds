<div class="col-md-6">
  <form class="form-horizontal">
  <fieldset>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-12 control-label calc-label" for="calcAge">Age</label>  
    <div class="col-md-12">
    <input id="calcAge" name="calcAge" type="text" placeholder="Enter your current age" class="form-control input-md" maxlength="2" onkeyup="checkInput(this)">
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-12 control-label calc-label" for="calcIncome">Income</label>  
    <div class="col-md-12">
    <input id="calcIncome" name="calcIncome" type="text" placeholder="Enter your gross annual income" class="form-control input-md">
    </div>
  </div>

  <!-- Multiple Checkboxes -->
  <div class="form-group">
    <label class="col-md-12 control-label calc-label" for="checkboxes">Existing Coverage?</label>
    <div class="col-md-12">
    <div class="checkbox">
      <label for="checkboxes-0">
        <input type="checkbox" name="checkboxes" id="checkboxes-0" value="1">
        Yes, I currently have some disability coverage.
      </label>
      <label for="checkboxes-1">
        <input type="checkbox" name="checkboxes" id="checkboxes-1" value="1">
        No, I do not have any disability coverage.
      </label>
    </div>
    </div>
  </div>

  <!-- Text input-->
  <div id="optionalCoverage" class="form-group">
    <label class="col-md-12 control-label calc-label" for="calcPlans">How much does your existing disability plan cover?</label>  
    <div class="col-md-12">
    <input id="calcPlans" name="calcPlans" type="text" placeholder="Price per year" class="form-control input-md"> 
    </div>
  </div>

  </fieldset>
  </form>
</div>

